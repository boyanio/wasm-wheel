{
  "name": "wasm-wheel",
  "title": "The Wheel of WebAssembly",
  "description": "A demo project showing how different programming language sources can be compiled to WebAssembly and used independently on the same page.",
  "version": "1.0.0",
  "author": {
    "name": "Boyan Mihaylov",
    "url": "https://boyan.io"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:lang": "node scripts/build.js",
    "build:metadata": "node scripts/build.js metadata",
    "build:loaders": "node scripts/build.js loaders",
    "build:dockerfile": "node scripts/dockerfile.js",
    "build:docker": "node scripts/dockerfile.js && docker build -t wasm-wheel:latest .",
    "lint": "node_modules/.bin/eslint . --ignore-path .gitignore",
    "start": "node scripts/serve.js"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boyanio/wasm-wheel.git"
  },
  "devDependencies": {
    "connect": "^3.6.5",
    "eslint": "^5.15.3",
    "serve-static": "^1.13.1"
  }
}
